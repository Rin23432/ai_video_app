## shared datasource
spring.datasource.url=jdbc:mysql://localhost:3306/animegen?useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=UTC
spring.datasource.username=root
spring.datasource.password=root

## shared redis
spring.data.redis.host=localhost
spring.data.redis.port=6379

## mybatis
mybatis.configuration.map-underscore-to-camel-case=true

## api only
animegen.jwt.secret=replace-with-strong-secret

## optional object storage config (M0 mock can use public URLs)
animegen.storage.endpoint=http://localhost:9000
animegen.storage.access-key=minioadmin
animegen.storage.secret-key=minioadmin
animegen.storage.bucket=animegen-assets
